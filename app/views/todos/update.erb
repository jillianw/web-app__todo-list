<p>Update To Do details:</p>
<br>

<form action="/updated_todo/<%= @todo_update.id %>" method="post">
  <p>
    Title:
    <input type="text" name="title" value="<%= @todo_update.title %>">
  </p>
  <p> 
    Description:
    <input type="text" name="description" value="<%= @todo_update.description %>">
  </p>
  <p>
      Category:
      <select name="category">
          <option>Select an category...</option>

          <% @categories.each do |x| %>
              <option value="<%= x.category %>">
              <%=x.category %></option>
          <% end %>
      </select>
  </p>
  <p> 
    Completed?
    <input type="checkbox" name="completed" value="<%= @todo_update.completed %>">
  </p>
  <input type ="submit">
</form> 