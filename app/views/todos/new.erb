<% if @todo != nil %>
  <% @todo.get_errors.each do | error_message| %>
    <p><b><%= error_message %></b></p>
  <% end %>
<% end %> 

<form action="/todos/create" method="post">
  <fieldset>
    <legend>Create a new to do list</legend>
    <p> 
        Title: 
    </p>
    <input type="text" name="title"> 
    
    <p>
        Description:
    </p>
    <input type="text" name="description"> 
  
    <p>  <br>
        Task Owner:
        <select name="user_id">
            <option>Select an owner...</option>

            <% @user.each do |user| %>
                <option value="<%= user.id %>">
                <%= user.name %></option>
            <% end %>
        </select>
    </p>
    <br>
   <p>
    Category:
    <select name="category_id">
      <option>Select a category...</option>

      <% @categories.each do |x| %>
        <option value="<%= x.id %>">
        <%= x.name %></option>
      <% end %>
    </select>
  </p>
  <br>
    <input type="submit">
  </fieldset>
</form>