<h2>All To Do Lists:</h2>

<% @todo_lists.each do |x| %>
  <p>
    <a href="view_todo/<%= x.id %>"><%= x.title %> </a>
    : <%= x.user_name %> 
  </p>
  <p><i> <%= x.description %> </i></p>
  <p>Category: <%= x.category_name %></p>

  <form action="delete_todo/<%= x.id %>" method="post">
    <input type="submit" value="Delete">
  </form>
    <form action="update_todo/<%= x.id %>" method="get">
    <input type="submit" value="Update">
  </form>
  <br>
<% end %>



